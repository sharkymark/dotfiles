[user]
    name = Mark Milligan
    email = mark@nuon.co

[credential "https://github.com"]
	username = sharkymark
[credential]
	helper = store

[core]
	excludesfile = ~/.gitignore_global
[pull]
	rebase = true
[fetch]
	prune = true
[diff]
	colorMoved = zebra
[help]
    autoCorrect = immediate
[alias]
    lastdiff = diff HEAD^1..HEAD
    co = checkout
    br = branch
    cm = commit
    st = status
    lg = log --oneline --graph --decorate
    rv = revert
    rs = reset --hard HEAD~1