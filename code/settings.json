/*

Last updated: 2025-06-19

https://code.visualstudio.com/docs/terminal/advanced

If locally installed VS Code, this file is located: 
~/Library/Application Support/Code/User/settings.json
*/

{
    // set color theme
        "workbench.colorTheme": "Default Dark+",
    // disable home screen
        "workbench.startupEditor": "none",

        "breadcrumbs.enabled": true,

    // window size from last close
        "window.newWindowDimensions": "inherit",

    // turn off telemetry
        "telemetry.telemetryLevel": "off",

    "[csv]": {
        "editor.wordWrap": "off"
    },
    "[plaintext]": {
        "editor.wordWrap": "on"
    },
    "[markdown]": {
        "editor.wordWrap": "on"
    },    

    // Intellisense / autocomplete / suggestions settings
    // https://code.visualstudio.com/docs/editor/intellisense#_customizing-intellisense
    // https://code.visualstudio.com/docs/editor/intellisense
    
    // "editor.quickSuggestions": false,   
    // Consider changing other to false for my note taking
    // or alternatively increase the suggestion delay - now 2 seconds
       "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": false
        },

    // Controls whether sorting favors words that appear close to the cursor    
        "editor.suggest.localityBonus": false,

    // show snippits
        "editor.snippetSuggestions": "top",

    // Controls if suggestions should automatically show up when typing trigger characters
        "editor.suggestOnTriggerCharacters": true,
    
    // Controls if suggestions should be accepted on 'Enter' - in addition to 'Tab'. Helps to avoid ambiguity between inserting new lines or accepting suggestions. The value 'smart' means only accept a suggestion with Enter when it makes a textual change
        "editor.acceptSuggestionOnEnter": "on",
    
    // Controls if pressing tab inserts the best suggestion and if tab cycles through other suggestions
        "editor.tabCompletion": "on",    
    
    // Controls the delay in ms after which quick suggestions will show up.
        "editor.quickSuggestionsDelay": 100,
    
    // Controls how suggestions are pre-selected when showing the suggest list
        "editor.suggestSelection": "first",
    
    // Enable word based suggestions
        "editor.wordBasedSuggestions": "off",
    
    // Enable parameter hints
        "editor.parameterHints.enabled": true,
    
    // Turn off file watchers
    //    "files.watcherExclude": {
    //        "**": true
    //    },
        
    // 
        "terminal.integrated.enablePersistentSessions": false,
        // never, whenEmpty, always
        "terminal.integrated.hideOnStartup": "whenEmpty",

        "remote.SSH.connectTimeout": 1800,
        "git.autofetch": true,
        "git.ignoreMissingGitWarning": true,
        "github.copilot.enable": {
            "markdown": false,
            "plaintext": false
        },

    // formatter settings
    // https://github.com/prettier/prettier-vscode
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": false,
        "go.toolsManagement.autoUpdate": true
        
    
    }